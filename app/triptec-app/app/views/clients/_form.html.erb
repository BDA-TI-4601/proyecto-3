<%= form_for(@client, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @client.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h4>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :username, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :id_client, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telephone, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :telephone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :wishes, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :wishes, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reservations, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :reservations, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= link_to 'Log Out', 
  :controller => 'logins',
  :action => 'index' %>

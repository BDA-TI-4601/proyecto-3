<div class="page-header">
  <%= link_to new_spot_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Spot
  <% end %>
  <h1>Listing spots</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Address</th>
            <th>Type</th>
            <th>Img</th>
            <th>Telephone</th>
            <th>Rating</th>
            <th>Schedule</th>
            <th>Website</th>
            <th>Description</th>
            <th>Activities</th>
            <th>Price</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @spots) do |spot| %>
            <td><%= spot.name %></td>
            <td><%= spot.latitude %></td>
            <td><%= spot.longitude %></td>
            <td><%= spot.address %></td>
            <td><%= spot.type %></td>
            <td><%= spot.img %></td>
            <td><%= spot.telephone %></td>
            <td><%= spot.rating %></td>
            <td><%= spot.schedule %></td>
            <td><%= spot.website %></td>
            <td><%= spot.description %></td>
            <td><%= spot.activities %></td>
            <td><%= spot.price %></td>
            <td><%= link_to 'Show', spot %></td>
        <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
        <td><%= link_to 'Destroy', spot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

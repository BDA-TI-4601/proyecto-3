<div class="page-header">
  <%= link_to employees_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_employee_path(@employee), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show employee</h1>
</div>

<dl class="dl-horizontal">
  <dt>Description:</dt>
  <dd><%= @employee.description %></dd>

  <dt>Activities:</dt>
  <dd><%= @employee.activities %></dd>

  <dt>Price per day:</dt>
  <dd><%= @employee.price_per_day %></dd>

  <dt>Latitude:</dt>
  <dd><%= @employee.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @employee.longitude %></dd>

</dl>

<div class="page-header">
  <%= link_to new_employee_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Employee
  <% end %>
  <h1>Listing employees</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Description</th>
            <th>Activities</th>
            <th>Price per day</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @employees) do |employee| %>
            <td><%= employee.description %></td>
            <td><%= employee.activities %></td>
            <td><%= employee.price_per_day %></td>
            <td><%= employee.latitude %></td>
            <td><%= employee.longitude %></td>
            <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

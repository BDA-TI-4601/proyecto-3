<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name place</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Type</th>
      <th>Img</th>
      <th>Telephone</th>
      <th>Rating</th>
      <th>Schedule</th>
      <th>Website</th>
      <th>Description</th>
      <th>Activities</th>
      <th>Price per day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name_place %></td>
        <td><%= employee.latitude %></td>
        <td><%= employee.longitude %></td>
        <td><%= employee.address %></td>
        <td><%= employee.type %></td>
        <td><%= employee.img %></td>
        <td><%= employee.telephone %></td>
        <td><%= employee.rating %></td>
        <td><%= employee.schedule %></td>
        <td><%= employee.website %></td>
        <td><%= employee.description %></td>
        <td><%= employee.activities %></td>
        <td><%= employee.price_per_day %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

